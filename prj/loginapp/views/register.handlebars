
<html ng-app>

<style>
input.ng-invalid.ng-dirty{border:1px solid red;}
</style> 
       <script src="http://code.angularjs.org/1.2.3/angular.min.js"></script>
<h2 class="page-header">Register</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form name="sentMessage" method="post" action="/users/register">
   <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" placeholder="Name" name="name" ng-model="user.name" required ng-minlength="3" ng-maxlength="30">
				<span ng-show="sentMessage.name.$dirty && sentMessage.name.$error.minlength">  too short!! </span>
				<span ng-show="sentMessage.name.$dirty && sentMessage.name.$error.maxlength">  too long!! </span> 
  </div>

  <div class="form-group">
    <label>Username</label>
    <input type="text" class="form-control" placeholder="Username" name="username" ng-model="user.username" required ng-minlength="3" ng-maxlength="30">
<span ng-show="sentMessage.username.$dirty && sentMessage.username.$error.minlength">  too short!! </span>
	<span ng-show="sentMessage.username.$dirty && sentMessage.username.$error.maxlength">  too long!! </span> 
  </div>
   <div class="form-group">
    <label>Email</label>
    <input type="email" class="form-control" placeholder="Email" name="email" ng-model="user.email" required>
<span ng-show="sentMessage.email.$dirty && sentMessage.email.$error.email">  Not an Email, Please enter your email address. </span>
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" placeholder="Password" name="password" ng-model="user.password" required ng-minlength="3" ng-maxlength="30">
	<span ng-show="sentMessage.password.$dirty && sentMessage.password.$error.minlength">  too short!! </span>
	<span ng-show="sentMessage.password.$dirty && sentMessage.password.$error.maxlength">  too long!! </span> 
  </div>
  <div class="form-group">
    <label>Confirm Password</label>
    <input type="password" class="form-control" placeholder="Password" name="password2" ng-model="user.password2" required  ng-minlength="3" ng-maxlength="30">
	<span ng-show="sentMessage.password2.$dirty && sentMessage.password2.$error.minlength">  too short!! </span>
	<span ng-show="sentMessage.password2.$dirty && sentMessage.password2.$error.maxlength">  too long!! </span> 
  </div>
  <button type="submit" class="btn btn-default" ng-disabled="sentMessage.$invalid">Submit</button>
</form>
</html>
